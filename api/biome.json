{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "warn"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "noBannedTypes": "warn",
        "noForEach": "off"

      },
      "style": {
        "useTemplate": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "tab",
    "indentWidth": 4,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded",
      "bracketSpacing": false,
      "trailingComma": "all"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      ".git",
      ".build/**/*",
      "node_modules/**/*"
    ]
  }
}
